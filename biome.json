{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "useExhaustiveDependencies": "error"
      },
      "suspicious": {
        "noExplicitAny": "error"
      },
      "style": {
        "noNonNullAssertion": "error",
        "useImportType": "error"
      }
    },
    "ignore": [
      "node_modules/**",
      "dist/**",
      "*.d.ts",
      "**/*.d.ts",
      "**/node_modules/@types/react/index.d.ts",
      "**/node_modules/@types/react/**/*.d.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "ignore": [
      "node_modules/**",
      "dist/**",
      "*.d.ts",
      "**/*.d.ts",
      "**/node_modules/@types/react/index.d.ts",
      "**/node_modules/@types/react/**/*.d.ts"
    ]
  }
}
